<!-- Zielordner: OpenDriverUpdater/MainWindow.xaml -->
<Window x:Class="OpenDriverUpdater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:OpenDriverUpdater.ViewModels"
        xmlns:conv="clr-namespace:OpenDriverUpdater.Converters"
        Title="DriverPro"
        Height="720" Width="1240"
        WindowStartupLocation="CenterScreen">

    <!-- ViewModel binden -->
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <!-- Converter registrieren -->
    <Window.Resources>
        <conv:NavEqualsConverter x:Key="NavEquals"/>
        <conv:IntToVisibilityConverter x:Key="IntToVisibility"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ================= Sidebar ================= -->
        <Border Grid.Column="0"
                Background="{DynamicResource Panel}"
                BorderBrush="{DynamicResource Stroke}"
                BorderThickness="0,0,1,0">
            <DockPanel LastChildFill="True" Margin="16">

                <!-- Logo + Titel -->
                <StackPanel DockPanel.Dock="Top" Margin="0,4,0,18">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Width="34" Height="34" Background="#0E86F9" CornerRadius="8" Margin="0,0,10,0">
                            <TextBlock Text=""
                                       FontFamily="Segoe MDL2 Assets"
                                       Foreground="White"
                                       FontSize="18"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Border>
                        <StackPanel>
                            <TextBlock Text="DriverPro" FontSize="20" FontWeight="Bold"/>
                            <TextBlock Text="v2.4.1" Foreground="{DynamicResource FgSub}" FontSize="12"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Navigation -->
                <StackPanel DockPanel.Dock="Top">

                    <!-- Dashboard -->
                    <ToggleButton Style="{StaticResource NavButton}"
                                  Command="{Binding GoDashboard}"
                                  IsChecked="{Binding SelectedPage,
                                                      Converter={StaticResource NavEquals},
                                                      ConverterParameter=Dashboard}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets"/>
                            <TextBlock Text="Dashboard" Margin="10,0,0,0"/>
                        </StackPanel>
                    </ToggleButton>

                    <!-- Treiber scannen -->
                    <ToggleButton Style="{StaticResource NavButton}"
                                  Command="{Binding GoScan}"
                                  IsChecked="{Binding SelectedPage,
                                                      Converter={StaticResource NavEquals},
                                                      ConverterParameter=Scan}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets"/>
                            <TextBlock Text="Treiber scannen" Margin="10,0,0,0"/>
                        </StackPanel>
                    </ToggleButton>

                    <!-- Downloads mit Badge -->
                    <Grid>
                        <ToggleButton Style="{StaticResource NavButton}"
                                      Command="{Binding GoDownloads}"
                                      IsChecked="{Binding SelectedPage,
                                                          Converter={StaticResource NavEquals},
                                                          ConverterParameter=Downloads}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="" FontFamily="Segoe MDL2 Assets"/>
                                <TextBlock Text="Downloads" Margin="10,0,0,0"/>
                            </StackPanel>
                        </ToggleButton>
                        <Border Style="{StaticResource Badge}"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,10,0"
                                Visibility="{Binding DownloadsCount,
                                                     Converter={StaticResource IntToVisibility}}">
                            <TextBlock Text="{Binding DownloadsCount}"
                                       Foreground="White"
                                       FontSize="12"
                                       FontWeight="Bold"/>
                        </Border>
                    </Grid>

                    <!-- Sicherheit -->
                    <ToggleButton Style="{StaticResource NavButton}"
                                  Command="{Binding GoSecurity}"
                                  IsChecked="{Binding SelectedPage,
                                                      Converter={StaticResource NavEquals},
                                                      ConverterParameter=Security}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets"/>
                            <TextBlock Text="Sicherheit" Margin="10,0,0,0"/>
                        </StackPanel>
                    </ToggleButton>

                    <!-- Performance -->
                    <ToggleButton Style="{StaticResource NavButton}"
                                  Command="{Binding GoPerformance}"
                                  IsChecked="{Binding SelectedPage,
                                                      Converter={StaticResource NavEquals},
                                                      ConverterParameter=Performance}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets"/>
                            <TextBlock Text="Performance" Margin="10,0,0,0"/>
                        </StackPanel>
                    </ToggleButton>

                    <!-- Einstellungen -->
                    <ToggleButton Style="{StaticResource NavButton}"
                                  Command="{Binding GoSettings}"
                                  IsChecked="{Binding SelectedPage,
                                                      Converter={StaticResource NavEquals},
                                                      ConverterParameter=Settings}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets"/>
                            <TextBlock Text="Einstellungen" Margin="10,0,0,0"/>
                        </StackPanel>
                    </ToggleButton>

                    <!-- Theme umschalten -->
                    <ToggleButton Style="{StaticResource NavButton}"
                                  Command="{Binding ToggleTheme}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets"/>
                            <TextBlock Text="Hell" Margin="10,0,0,0"/>
                        </StackPanel>
                    </ToggleButton>

                    <!-- Über -->
                    <ToggleButton Style="{StaticResource NavButton}"
                                  Command="{Binding GoAbout}"
                                  IsChecked="{Binding SelectedPage,
                                                      Converter={StaticResource NavEquals},
                                                      ConverterParameter=About}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="" FontFamily="Segoe MDL2 Assets"/>
                            <TextBlock Text="Über" Margin="10,0,0,0"/>
                        </StackPanel>
                    </ToggleButton>

                </StackPanel>

                <!-- Premium Box -->
                <Border DockPanel.Dock="Bottom"
                        Background="{DynamicResource Card}"
                        CornerRadius="14"
                        Padding="14"
                        Margin="0,24,0,0"
                        BorderBrush="{DynamicResource Stroke}"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Premium User" FontWeight="SemiBold"/>
                        <TextBlock Text="Lizenz bis 2025" Foreground="{DynamicResource FgSub}" FontSize="12"/>
                    </StackPanel>
                </Border>

            </DockPanel>
        </Border>

        <!-- ================= Content ================= -->
        <Border Grid.Column="1" Background="{DynamicResource Bg}">
            <ContentPresenter Content="{Binding Content}"/>
        </Border>
    </Grid>
</Window>
