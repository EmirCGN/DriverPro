<!-- OpenDriverUpdater/Themes/Colors.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Dark -->
    <Color x:Key="Bg-D">#111A24</Color>
    <Color x:Key="Panel-D">#16222E</Color>
    <Color x:Key="Card-D">#1C2A39</Color>
    <Color x:Key="CardSoft-D">#223245</Color>
    <Color x:Key="Stroke-D">#2A3A4C</Color>
    <Color x:Key="Fg-D">#EAF1FA</Color>
    <Color x:Key="FgSub-D">#9DB0C5</Color>

    <!-- Light -->
    <Color x:Key="Bg-L">#F2F6FB</Color>
    <Color x:Key="Panel-L">#FFFFFF</Color>
    <Color x:Key="Card-L">#FFFFFF</Color>
    <Color x:Key="CardSoft-L">#F6F9FD</Color>
    <Color x:Key="Stroke-L">#E7EDF5</Color>
    <Color x:Key="Fg-L">#0F172A</Color>
    <Color x:Key="FgSub-L">#627792</Color>

    <!-- Accents -->
    <Color x:Key="AccentBlue1">#1FA2FF</Color>
    <Color x:Key="AccentBlue2">#1D1E9F</Color>
    <!-- FIXED -->
    <Color x:Key="AccentBlueDark">#0D66C2</Color>
    <Color x:Key="AccentGreen1">#1CCB83</Color>
    <Color x:Key="AccentGreen2">#22E39B</Color>
    <Color x:Key="AccentRed">#FF5A5A</Color>
    <Color x:Key="AccentYellow">#F5B84C</Color>

    <!-- Dynamic brushes (toggled in VM) -->
    <SolidColorBrush x:Key="Bg" Color="{StaticResource Bg-D}"/>
    <SolidColorBrush x:Key="Panel" Color="{StaticResource Panel-D}"/>
    <SolidColorBrush x:Key="Card" Color="{StaticResource Card-D}"/>
    <SolidColorBrush x:Key="CardSoft" Color="{StaticResource CardSoft-D}"/>
    <SolidColorBrush x:Key="Stroke" Color="{StaticResource Stroke-D}"/>
    <SolidColorBrush x:Key="Fg" Color="{StaticResource Fg-D}"/>
    <SolidColorBrush x:Key="FgSub" Color="{StaticResource FgSub-D}"/>

    <SolidColorBrush x:Key="Blue1" Color="{StaticResource AccentBlue1}"/>
    <SolidColorBrush x:Key="Blue2" Color="{StaticResource AccentBlue2}"/>
    <SolidColorBrush x:Key="BlueDark" Color="{StaticResource AccentBlueDark}"/>
    <SolidColorBrush x:Key="Green1" Color="{StaticResource AccentGreen1}"/>
    <SolidColorBrush x:Key="Green2" Color="{StaticResource AccentGreen2}"/>
    <SolidColorBrush x:Key="Red" Color="{StaticResource AccentRed}"/>
    <SolidColorBrush x:Key="Yellow" Color="{StaticResource AccentYellow}"/>
</ResourceDictionary>
