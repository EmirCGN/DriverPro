<!-- DriverPro/Views/ScanView.xaml -->
<UserControl x:Class="DriverPro.Views.ScanView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:DriverPro.Models"
             Background="Transparent">

    <UserControl.Resources>

        <!-- Badges -->
        <Style x:Key="BadgeBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Blaue ProgressBar -->
        <Style x:Key="BlueProgress" TargetType="ProgressBar">
            <Setter Property="Height" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource Blue1}"/>
            <!-- Füllung -->
            <Setter Property="Background" Value="{DynamicResource CardSoft}"/>
            <!-- Track -->
            <Setter Property="BorderBrush" Value="{DynamicResource Stroke}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Karte je Treiber -->
        <DataTemplate x:Key="DriverCardTemplate" DataType="{x:Type models:DriverItem}">
            <Border Background="{DynamicResource Card}" CornerRadius="12" Padding="16"
                    BorderThickness="1" BorderBrush="{DynamicResource Stroke}" Margin="0,0,0,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="48"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="220"/>
                    </Grid.ColumnDefinitions>

                    <!-- Iconkreis -->
                    <Border Width="44" Height="44" CornerRadius="22"
                            Background="{DynamicResource Blue2}" VerticalAlignment="Center">
                        <TextBlock Text="{Binding Initials}" Foreground="White"
                                   FontWeight="Bold" FontSize="20"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <!-- Texte -->
                    <StackPanel Grid.Column="1" Margin="12,0,0,0">
                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="16"/>
                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                            <TextBlock Text="{Binding Vendor}" Foreground="{DynamicResource FgSub}"/>
                            <TextBlock Text=" · " Foreground="{DynamicResource FgSub}"/>
                            <TextBlock Text="{Binding Category}" Foreground="{DynamicResource FgSub}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                            <TextBlock Text="Version: " Foreground="{DynamicResource FgSub}"/>
                            <TextBlock Text="{Binding CurrentVersion}"/>
                            <TextBlock Text="  →  " Foreground="{DynamicResource FgSub}" Margin="6,0,6,0"/>
                            <TextBlock Text="{Binding LatestVersion}" Foreground="{DynamicResource Blue1}"
                                       TextDecorations="Underline"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="Größe: " Foreground="{DynamicResource FgSub}"/>
                            <TextBlock Text="{Binding SizeMb, StringFormat={}{0:F1} MB}"/>
                            <TextBlock Text="     Zuletzt aktualisiert: " Foreground="{DynamicResource FgSub}" Margin="10,0,0,0"/>
                            <TextBlock Text="{Binding LastUpdated, StringFormat={}{0:dd.MM.yyyy}}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Badges + Aktion -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal"
                                HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Border Style="{StaticResource BadgeBorder}" Background="#1C8C57"
                                Visibility="{Binding HasUpdate, Converter={StaticResource BoolToVisibility}, ConverterParameter=Invert}"
                                Margin="0,0,10,0">
                            <TextBlock Text="Aktuell" Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                        </Border>

                        <Border Style="{StaticResource BadgeBorder}" Background="#B8860B"
                                Visibility="{Binding HasUpdate, Converter={StaticResource BoolToVisibility}}"
                                Margin="0,0,10,0">
                            <TextBlock Text="Update verfügbar" Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                        </Border>

                        <Button Content="{Binding HasUpdate, Converter={StaticResource BoolToText}, ConverterParameter='Aktuell|Update'}"
                                Width="110" Height="36"
                                IsEnabled="{Binding HasUpdate}"
                                Command="{Binding DataContext.UpdateOneCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                CommandParameter="{Binding}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

    </UserControl.Resources>

    <Grid Margin="24">

        <!-- Start/Progress -->
        <Border Background="{DynamicResource Card}" CornerRadius="12" Padding="40"
                Visibility="{Binding ShowResults, Converter={StaticResource BoolToVisibility}, ConverterParameter=Invert}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="600">
                <Border Width="70" Height="70" CornerRadius="35" Background="{DynamicResource Blue1}" Margin="0,0,0,10">
                    <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Foreground="White" FontSize="32"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <TextBlock Text="Treiber-Scan starten" FontWeight="SemiBold" FontSize="20"
                           HorizontalAlignment="Center" Margin="0,0,0,6"/>

                <TextBlock Text="{Binding StatusText}" Foreground="{DynamicResource FgSub}" FontSize="14"
                           HorizontalAlignment="Center" Margin="0,0,0,16"/>

                <Button Content="Scan starten" Width="160" Height="42" Margin="0,12,0,0"
                        Command="{Binding StartScanCommand}"
                        Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibility}, ConverterParameter=Invert}"/>

                <StackPanel Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibility}}"
                            Margin="0,20,0,0">
                    <TextBlock Text="System wird gescannt..." FontWeight="SemiBold" FontSize="16"
                               HorizontalAlignment="Center" Margin="0,0,0,4"/>
                    <TextBlock Text="Verfügbare Updates werden gesucht..." Foreground="{DynamicResource FgSub}"
                               HorizontalAlignment="Center" Margin="0,0,0,10"/>

                    <!-- Blaue Progressbar -->
                    <ProgressBar Minimum="0" Maximum="100" Value="{Binding Progress}" Style="{StaticResource BlueProgress}"/>

                    <!-- Nur Prozent (rechts unten) 0/20/40/60/80/100 -->
                    <TextBlock Text="{Binding Progress, StringFormat={}{0}%}"
                               HorizontalAlignment="Right" Margin="0,6,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Ergebnisse -->
        <StackPanel Visibility="{Binding ShowResults, Converter={StaticResource BoolToVisibility}}">
            <ItemsControl ItemsSource="{Binding Drivers}" ItemTemplate="{StaticResource DriverCardTemplate}"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,6,0,0">
                <Button Content="Erneut scannen" Command="{Binding ResetCommand}" Margin="0,0,8,0"/>
                <Button Content="Alle Updates" Command="{Binding UpdateAllCommand}"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>
